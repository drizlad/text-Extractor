{
  "manifest_version": 3,
  "name": "Text Extractor",
  "version": "1.0.0",
  "description": "Extract text from images and selected areas on any webpage using OCR technology",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "scripting"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/selection-overlay.js", "content/text-extractor.js"],
      "css": ["content/selection-overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Text Extractor - Click to activate text selection"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup/popup.html", "popup/popup.css", "popup/popup.js", "lib/ocr-processor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
